#!/bin/sh
export BUILD_MAKE_INC=Makefile.confiserie
export BUILD_CONFIG_H=config.h

if echo $0 | grep -q "^/"; then
	export confiserie=$(echo $0 | awk '{gsub("/[^/]*$","/confiserie"); printf("%s\n",$0);}')
else
	export confiserie=$(echo $PWD/$0 | awk '{gsub("/[^/]*$","/confiserie"); printf("%s\n",$0);}')
fi


. $confiserie/init.sh "$@" &&
($confiserie/beautifull_make_rules.sh &&
$confiserie/test_cc.sh &&
$confiserie/test_install.sh &&
$confiserie/autolib_make_rules.sh  &&
$confiserie/test_compile_c.sh $confiserie/OpenMLDep.c 
) ||clean_on_sig


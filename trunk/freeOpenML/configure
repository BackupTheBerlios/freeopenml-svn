#!/bin/sh
progname=${0/*\//}
confiserie=${0/\/$progname/}/confiserie

clean_on_sig() {
	rm -f $MAKEFILE
 #	.config.cache.new
	return 1
 }

MAKEFILE=Makefile.confiserie

trap clean_on_sig 2 15                   &&
. ${confiserie}/init.sh "$@" > ${MAKEFILE}&&
{
include ${confiserie}/C/Makefile.beautifull_rules &&
include ${confiserie}/Makefiles/Makefile.autolib &&
include ${confiserie}/Makefiles/Makefile.tags &&

. ${confiserie}/C/test_cc.sh >> ${MAKEFILE}&&
. ${confiserie}/C/test_shared_static.sh >> ${MAKEFILE} &&
. ${confiserie}/C/test_compile_c.sh ${confiserie}/OpenMLDep.c 
} ||clean_on_sig &&
finish_confiserie 

